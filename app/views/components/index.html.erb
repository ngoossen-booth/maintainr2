<div>
  <div>
    <h1>
      List of all components
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new component
    </h2>

    <form action="/insert_component" method="post">
      <div>
        <label for="equipment_id_box">
          Equipment
        </label>

        <input type="text" id="equipment_id_box" name="query_equipment_id">
      </div>

      <div>
        <label for="last_service_date_box">
          Last service date
        </label>

        <input type="datetime-local" id="last_service_date_box" name="query_last_service_date">
      </div>

      <div>
        <label for="next_service_date_box">
          Next service date
        </label>

        <input type="datetime-local" id="next_service_date_box" name="query_next_service_date">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create component
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Equipment
        </th>

        <th>
          Last service date
        </th>

        <th>
          Next service date
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_components.each do |a_component| %>
      <tr>
        <td>
          <%= a_component.id %>
        </td>

        <td>
          <%= a_component.equipment_id %>
        </td>

        <td>
          <%= a_component.last_service_date %>
        </td>

        <td>
          <%= a_component.next_service_date %>
        </td>

        <td>
          <%= a_component.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_component.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_component.updated_at) %> ago
        </td>

        <td>
          <a href="/components/<%= a_component.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
