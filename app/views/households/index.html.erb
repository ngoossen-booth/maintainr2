<div>
  <div>
<ol class="breadcrumb">
  <li class="breadcrumb-item active"><a href="/households">Households</a></li>
</ol>
</div>
</div>


<div>
  <div>
    <h1>
      List of your households
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Picture</th>
          <th scope="col">Nickname</th>
          <th scope="col">Address</th>
          <th scope="col">Details</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>

      
        <% @list_of_households.each do |a_household| %>
      <tbody>
        <tr class="table-light">

           <td><img src="<%= a_household.picture %>", alt ="House image" width="225" height="150"></td>

          <td><%= a_household.nickname %></td>
          <td><%= a_household.address %></td>
          <td><a href="/households/<%= a_household.id %>"><i class="fas fa-ellipsis-h"></i></a></td>
          <td><a href="/delete_household/<%= a_household.id %>"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new household
    </h2>

    <form action="/insert_household" method="post">
      <div>
        <label for="picture_box">
          Picture
        </label>
        <input type="text" id="picture_box" name="query_picture" placeholder="Optional">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname" placeholder="Required">
      </div>


      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" placeholder="Optional">
      </div>

      <button>
        Create household
      </button>
    </form>
  </div>
</div>