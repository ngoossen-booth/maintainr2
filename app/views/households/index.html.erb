<div>
  <div>
    <h1>
      List of all households
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new household
    </h2>

    <form action="/insert_household" method="post">
      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="picture_box">
          Picture
        </label>

        <input type="text" id="picture_box" name="query_picture">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname">
      </div>

      <button>
        Create household
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Picture
        </th>

        <th>
          Nickname
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_households.each do |a_household| %>
      <tr>
        <td>
          <%= a_household.id %>
        </td>

        <td>
          <%= a_household.owner_id %>
        </td>

        <td>
          <%= a_household.picture %>
        </td>

        <td>
          <%= a_household.nickname %>
        </td>

        <td>
          <%= time_ago_in_words(a_household.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_household.updated_at) %> ago
        </td>

        <td>
          <a href="/households/<%= a_household.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
