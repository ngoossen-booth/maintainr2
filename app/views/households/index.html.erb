<div>
  <div>
    <h1>
      List of your households
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Picture</th>
      <th scope="col">Nickname</th>
      <th scope="col">Wardrobe</th>
      <th scope="col">Equipment</th>
      <th scope="col">Details</th>

    </tr>
  </thead>

      <% @list_of_households.each do |a_household| %>

<tbody>
    <tr class="table-light">
        <td><%= a_household.picture %></td>
        <td><%= a_household.nickname %></td>
        <td>link to wardrobe</td>
        <td>Link to equipment</td>

        <td><a href="/households/<%= a_household.id %>"> Show details</a></td>
    </tr>

      <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new household
    </h2>

    <form action="/insert_household" method="post">
      <div>
        <label for="picture_box">
          Picture
        </label>

        <input type="text" id="picture_box" name="query_picture">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname">
      </div>

      <button>
        Create household
      </button>
    </form>
  </div>
</div>