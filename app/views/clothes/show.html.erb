<div>
  <div>
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/clothes">Clothes</a></li>
  <li class="breadcrumb-item active"><a href="/clothes/<%=@the_clothe.id%>"><%=@the_clothe.description%></a></li>
</ol>
</div>
</div>

<div>
  <div>
    <h1>
      <%= @the_clothe.description %>: details
    </h1>

<hr>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_clothe.description %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
      <a href="/households/<%=Household.where({:id=>@the_clothe.home_id}).at(0).id%>"> <%=Household.where({:id=>@the_clothe.home_id}).at(0).nickname%></a>
      <%# <%=Household.where({:id=>@the_clothe.home_id}).at(0).nickname%> 
      </dd>

      <dt>
        Quantity
      </dt>
      <dd>
        <%= @the_clothe.quantity %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_clothe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit article of clothing
    </h2>

    <form action="/modify_clothe/<%= @the_clothe.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>


    <div class="form-group">
      <label for="home_id_box">Household</label>
        <select class="form-control" id="home_id_box" name="query_home_nickname">
          <% @list_of_households.each do |a_household| %>        
            <option><%=a_household.nickname%></option>
          <%end%>
        </select>
    </div>


      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity">
      </div>

      <button>
        Update <%= @the_clothe.description %>
      </button>
    </form>
  </div>
</div>

<hr>

    <div>
      <div>
        <a href="/clothes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_clothe/<%= @the_clothe.id %>">
          Delete article of clothing
        </a>
      </div>
    </div>
    <hr>